<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="@Url.Content("~/Content/Bootstrap.css")" rel="stylesheet" type="text/css" />
</head>
<body>
    <nav class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a href="@Url.Action("Index", "Home")" class="navbar-brand">Maest Web Store</a>
            </div>
            <div id="navbar" class="collapse navbar-collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Store", "Index", "Store")</li>
                    <li><a>Button Three</a></li>
                </ul>
                <ul class="nav navbar-nav navbar-right">
                    @if (Request.IsAuthenticated)
                    {
                        <li>@Html.ActionLink("Cart", "Cart", "Store")</li>
                        <li><span class="navbar-text">@Session["Cart"] | </span></li>
                            <li>@Html.ActionLink("Logout", "Logout", "User")</li>
                            <li>@Html.ActionLink("Update Account", "Updateuser", "User")</li>
                            <li>@Html.ActionLink("Wishlist", "Wishlist", "Store")</li>
                    }
                    else
                    {
                        <li>@Html.ActionLink("Login", "Login", "User")</li>
                        <li>@Html.ActionLink("Register", "Register", "User")</li>
                    }
                </ul>
            </div>
        </div>
    </nav>


    <div class="navbar navbar-static-top"></div>

    <div class="container">
        @RenderBody()
    </div>


    <script src="~/scripts/jquery-2.2.3.js"></script>
    <script src="~/scripts/bootstrap.js"></script>
    <!-- FOOTER - DON'T CHANGE THIS CODE -->

</body>
</html>
