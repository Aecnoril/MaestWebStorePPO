@model MaestWebStore.Models.User

@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Layouts/_ProtectedLayoutPage.cshtml";
}

@using (Html.BeginForm())
{
    <div id="login" class="col-lg-4 col-md-offset-4">
        <div class="panel panel-success">

            <div class="panel-heading">
                <h3 class="panel-title">Log In</h3>
            </div>
            <div class="panel-body">
                @Html.ValidationSummary(true, "Login failed. Check your login details.")
                <div>
                    <fieldset>
                        <div class="control-label" for="inputLarge" id="lbUserName">
                            @Html.LabelFor(u => u.Username)
                        </div>
                        <div typeof="text" id="tbName">
                            @Html.TextBoxFor(u => u.Username, new { @class = "form-control input-lg" })
                            @Html.ValidationMessageFor(u => u.Username)
                        </div>
                        <div class="control-label" for="inputLarge" id="lbPassword">
                            @Html.LabelFor(u => u.Password)
                        </div>
                        <div typeof="password" id="tbPassword">
                            @Html.PasswordFor(u => u.Password, new { @class = "form-control input-lg" })
                            @Html.ValidationMessageFor(u => u.Password)
                        </div>
                        <div>
                            @Html.CheckBoxFor(u => u.RememberMe)
                            @Html.LabelFor(u => u.RememberMe, new { @class = "small-input text-success" })
                        </div>

                        <div class="btn-group col-md-offset-3">
                            <button class="btn btn-success" type="submit" value="Log In"> Log In </button>
                            <button class="btn btn-success" type="submit" value="Register"> Register </button>
                        </div>
                    </fieldset>
                </div>
            </div>
        </div>
    </div>
}